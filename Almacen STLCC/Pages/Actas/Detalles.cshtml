@page "{id:int}"
@model Almacen_STLCC.Pages.Actas.DetallesModel
@{
    ViewData["Title"] = $"Detalles del Acta {Model.Acta.Numero_Acta}";
}
<link rel="stylesheet" href="~/css/actas/detalles.css" />

<div class="contenedor">
    <header class="header">
        <div>
            <h1><i class="fa-solid fa-clipboard-question"></i> Detalles del Acta</h1>
            <p>Productos registrados en esta acta de compra</p>
        </div>
        <a asp-page="/Actas/Index" class="btn-gradient-secondary"><i class="fa-solid fa-angle-left"></i> Volver a Actas</a>
    </header>

    <section class="info-acta">
        <div class="info-item">
            <strong>Numero de Acta:</strong> @Model.Acta.Numero_Acta
        </div>
        <div class="info-item">
            <strong>F01:</strong> @Model.Acta.F01
        </div>
        <div class="info-item">
            <strong>Orden de Compra:</strong> @(Model.Acta.Orden_Compra ?? "N/A")
        </div>
        <div class="info-item">
            <strong>Proveedor:</strong> @Model.Acta.Proveedor.Nombre_Proveedor
        </div>
        <div class="info-item">
            <strong>Fecha:</strong> @Model.Acta.Fecha.ToString("dd/MM/yyyy")
        </div>
        <div class="info-item info-item-full">
            <strong>Requisiciones en esta acta:</strong>
            @if (Model.RequisicionesUnicas.Any())
            {
                <div class="requisiciones-inline">
                    @foreach (var req in Model.RequisicionesUnicas)
                    {
                        <span class="badge-requisicion">@req</span>
                    }
                </div>
            }
            else
            {
                <span class="texto-sin-datos">Sin requisiciones asociadas</span>
            }
        </div>
    </section>

    <section class="tabla-productos">
        <h2>Productos del Acta</h2>
        <table class="tabla-gradient">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Producto</th>
                    <th>Requisición</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Precio con ISV</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Detalles != null && Model.Detalles.Any())
                {
                    decimal total = 0;
                    @foreach (var detalle in Model.Detalles)
                    {
                        var subtotal = detalle.Precio_Con_Isv.HasValue
                        ? detalle.Precio_Con_Isv.Value * detalle.Cantidad
                        : (detalle.Precio_Unitario ?? 0) * detalle.Cantidad;
                        total += subtotal;

                        <tr>
                            <td>@detalle.Producto.Codigo_Producto</td>
                            <td>@detalle.Producto.Nombre_Producto</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(detalle.Requisicion))
                                {
                                    <span class="badge-requisicion">@detalle.Requisicion</span>
                                }
                                else
                                {
                                    <span class="texto-sin-datos">Sin requisición</span>
                                }
                            </td>
                            <td>@detalle.Cantidad</td>
                            <td>
                                @if (detalle.Precio_Unitario.HasValue)
                                {
                                    <span>L. @detalle.Precio_Unitario.Value.ToString("N2")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                @if (detalle.Precio_Con_Isv.HasValue)
                                {
                                    <span>L. @detalle.Precio_Con_Isv.Value.ToString("N2")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td><strong>L. @subtotal.ToString("N2")</strong></td>
                            <td>
                                <button type="button"
                                        class="btn-gradient-info btn-gradient-sm"
                                        onclick="abrirModalRequisicion(@detalle.Id_Detalle, '@detalle.Producto.Nombre_Producto', '@(detalle.Requisicion ?? "")')">
                                    <i class="fa-solid fa-tag"></i>
                                    @if (string.IsNullOrWhiteSpace(detalle.Requisicion))
                                    {
                                        <span>Agregar</span>
                                    }
                                    else
                                    {
                                        <span>Editar</span>
                                    }
                                </button>
                            </td>
                        </tr>
                    }
                    <tr class="fila-total">
                        <td colspan="7" style="text-align: right;"><strong>TOTAL:</strong></td>
                        <td><strong>L. @total.ToString("N2")</strong></td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td colspan="8" class="mensaje-vacio">No hay productos registrados en esta acta.</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    @if (Model.ProductosPorRequisicion.Any())
    {
        <section class="agrupacion-requisiciones">
            <h2><i class="fa-solid fa-layer-group"></i> Productos Agrupados por Requisición</h2>
            <div class="requisiciones-cards">
                @foreach (var grupo in Model.ProductosPorRequisicion)
                {
                    <div class="requisicion-card">
                        <div class="requisicion-header">
                            <h3>@grupo.Key</h3>
                            <span class="cantidad-productos">@grupo.Value.Count producto(s)</span>
                        </div>
                        <div class="requisicion-productos">
                            <ul>
                                @foreach (var detalle in grupo.Value)
                                {
                                    <li>
                                        <strong>@detalle.Producto.Nombre_Producto</strong>
                                        <span class="producto-cantidad">Cantidad: @detalle.Cantidad</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>

<!-- Modal para agregar/editar requisición -->
<div id="modalRequisicion" class="modal-requisicion" style="display: none;">
    <div class="modal-requisicion-content">
        <div class="modal-requisicion-header">
            <h3><i class="fa-solid fa-tag"></i> <span id="tituloModal">Agregar Requisición</span></h3>
            <button type="button" class="btn-close-modal" onclick="cerrarModalRequisicion()">&times;</button>
        </div>
        <div class="modal-requisicion-body">
            <p><strong>Producto:</strong> <span id="nombreProducto"></span></p>
            <form method="post" asp-page-handler="ActualizarRequisicion" id="formRequisicion">
                <input type="hidden" name="idDetalle" id="idDetalle" />
                <div class="form-group-modal">
                    <label for="requisicion">Requisición:</label>
                    <input type="text"
                           name="requisicion"
                           id="requisicion"
                           class="form-control-modal"
                           placeholder="Ej: REQ-2025-001"
                           maxlength="100" />
                    <small class="form-text-modal">Deje vacío para remover la requisición</small>
                </div>
                <div class="modal-requisicion-actions">
                    <button type="submit" class="btn-gradient-success">
                        <i class="fa-solid fa-floppy-disk"></i> Guardar
                    </button>
                    <button type="button" class="btn-gradient-secondary" onclick="cerrarModalRequisicion()">
                        <i class="fa-solid fa-ban"></i> Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/actas/detalles.js"></script>
}