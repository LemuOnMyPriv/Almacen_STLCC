@page "{id:int}"
@model Almacen_STLCC.Pages.Actas.DetallesModel
@{
    ViewData["Title"] = $"Detalles del Acta {Model.Acta.Numero_Acta}";
}
<link rel="stylesheet" href="~/css/actas/detalles.css" />

<div class="contenedor">
    <header class="header">
        <div>
            <h1><i class="fa-solid fa-clipboard-question"></i> Detalles del Acta</h1>
            <p>Productos registrados en esta acta de compra</p>
        </div>
        <a asp-page="/Actas/Index" class="btn-gradient-secondary"><i class="fa-solid fa-angle-left"></i> Volver a Actas</a>
    </header>

    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successMessage" data-message="@TempData["SuccessMessage"]" style="display:none;"></div>
    }

    <section class="info-acta">
        <div class="info-item">
            <strong>Numero de Acta:</strong> @Model.Acta.Numero_Acta
        </div>
        <div class="info-item">
            <strong>F01:</strong> @Model.Acta.F01
        </div>
        <div class="info-item">
            <strong>Orden de Compra:</strong> @(Model.Acta.Orden_Compra ?? "N/A")
        </div>
        <div class="info-item">
            <strong>Proveedor:</strong> @Model.Acta.Proveedor.Nombre_Proveedor
        </div>
        <div class="info-item">
            <strong>Fecha:</strong> @Model.Acta.Fecha.ToString("dd/MM/yyyy")
        </div>
        <div class="info-item info-item-full">
            <strong>Requisiciones:</strong>
            <a asp-page="/Actas/Requisiciones"
               asp-route-id="@Model.Acta.Id_Acta"
               class="btn-gradient-info">
                <i class="fa-solid fa-file-lines"></i>
                Ver Requisiciones (@Model.CantidadRequisiciones)
            </a>
        </div>
    </section>

    <section class="tabla-productos">
        <h2>Productos del Acta</h2>
        <table class="tabla-gradient">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Producto</th>
                    <th>Requisición</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Precio con ISV</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Detalles != null && Model.Detalles.Any())
                {
                    decimal total = 0;
                    @foreach (var detalle in Model.Detalles)
                    {
                        var subtotal = detalle.Precio_Con_Isv.HasValue
                        ? detalle.Precio_Con_Isv.Value * detalle.Cantidad
                        : (detalle.Precio_Unitario ?? 0) * detalle.Cantidad;
                        total += subtotal;

                        <tr>
                            <td>@detalle.Producto.Codigo_Producto</td>
                            <td>@detalle.Producto.Nombre_Producto</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(detalle.Requisicion))
                                {
                                    <span class="badge-requisicion">@detalle.Requisicion</span>
                                }
                                else
                                {
                                    <span class="texto-sin-datos">Sin requisición</span>
                                }
                            </td>
                            <td>@detalle.Cantidad</td>
                            <td>
                                @if (detalle.Precio_Unitario.HasValue)
                                {
                                    <span>L. @detalle.Precio_Unitario.Value.ToString("N2")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                @if (detalle.Precio_Con_Isv.HasValue)
                                {
                                    <span>L. @detalle.Precio_Con_Isv.Value.ToString("N2")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td><strong>L. @subtotal.ToString("N2")</strong></td>
                            <td>
                                <a asp-page="/Actas/EditRequisicion"
                                   asp-route-id="@detalle.Id_Detalle"
                                   class="btn-gradient-warning btn-gradient-sm">
                                    <i class="fa-solid fa-tag"></i>
                                    @if (string.IsNullOrWhiteSpace(detalle.Requisicion))
                                    {
                                        <span>Agregar</span>
                                    }
                                    else
                                    {
                                        <span>Editar</span>
                                    }
                                </a>
                            </td>
                        </tr>
                    }
                    <tr class="fila-total">
                        <td colspan="6" style="text-align: right;"><strong>TOTAL:</strong></td>
                        <td><strong>L. @total.ToString("N2")</strong></td>
                        <td></td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td colspan="8" class="mensaje-vacio">No hay productos registrados en esta acta.</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            mostrarMensajeExito();
        });
    </script>
}