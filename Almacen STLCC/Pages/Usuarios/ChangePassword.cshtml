@page "{username}"
@model Almacen_STLCC.Pages.Usuarios.ChangePasswordModel
@{
    ViewData["Title"] = $"Cambiar Contraseña de {Model.TargetUsername}";
}

<link rel="stylesheet" href="~/css/contraseña/cambiar.css" />

<div class="contenedor">
    <header class="header">
        <h1>Cambie la contraseña del usuario <strong>"@Model.TargetUsername"</strong></h1>
        <p>Estableciendo nueva contraseña para: <strong>@Model.TargetUsername</strong></p>
    </header>

    <div class="info-box">
    Como administrador, es posible establecer una nueva contraseña sin conocer la actual, ingrese la nueva contraseña en caso de ser necesario.
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="fa-solid fa-triangle-exclamation"></i> @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            <i class="fa-solid fa-check"></i> @Model.SuccessMessage
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.NuevaContraseña">Nueva Contraseña:</label>
            <input asp-for="Input.NuevaContraseña"
                   class="form-control"
                   type="password"
                   placeholder="********"
                   autocomplete="new-password"
                   autofocus />
            <span asp-validation-for="Input.NuevaContraseña" class="text-danger"></span>
            <small class="form-text">
                Debe tener al menos 6 caracteres
            </small>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmarContraseña">Confirmar Nueva Contraseña:</label>
            <input asp-for="Input.ConfirmarContraseña"
                   class="form-control"
                   type="password"
                   placeholder="********"
                   autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmarContraseña" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-gradient-success">Actualizar Contraseña</button>
            <a asp-page="/Usuarios/Index" class="btn-gradient-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}